<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @category %> 
      <%= form_with(model: @category, class: "shadow p-3 mb-5 bg-info rounded", local: true) do |f| %>
        <div class="mb-3">
          <%= f.label :name, class: "form-label text-light" %><br/>
          <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a name" %>
        </div>
        <div class="row justify-content-center mb-3" >
          <%= f.submit class: "btn btn-outline-light btn-lg col-3" %>
        </div>
      <% end %>
    </div>
    <div class="text-center col-8 mb-3">
      <%= link_to '[Cancel and return to articles listing]', articles_path, class: "text-info" %>
    </div>
  </div>
</div>
